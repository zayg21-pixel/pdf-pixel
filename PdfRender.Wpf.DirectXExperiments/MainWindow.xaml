<Window x:Class="PdfRender.Wpf.DirectXExperiments.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PdfRender.Wpf.DirectXExperiments"
        mc:Ignorable="d"
        Title="DirectX PDF Rendering Experiment" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ToolBar Grid.Row="0">
            <Button Content="Open PDF" Click="OnOpenPdf" Padding="10,5"/>
            <Separator/>
            <Button Content="Previous Page" Click="OnPreviousPage" x:Name="PreviousButton" IsEnabled="False"/>
            <TextBlock Text="Page:" VerticalAlignment="Center" Margin="5,0"/>
            <TextBox x:Name="PageNumberTextBox" Width="50" TextAlignment="Center" Text="1" VerticalAlignment="Center"/>
            <TextBlock x:Name="TotalPagesTextBlock" Text="/ 0" VerticalAlignment="Center" Margin="5,0"/>
            <Button Content="Next Page" Click="OnNextPage" x:Name="NextButton" IsEnabled="False"/>
            <Separator/>
            <Button Content="Render" Click="OnRender" x:Name="RenderButton" IsEnabled="False" Padding="10,5"/>
        </ToolBar>

        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Margin="5">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <local:DirectXImageControl x:Name="DirectXImage" 
                                          Stretch="Uniform"
                                          Width="600" 
                                          Height="800"/>
            </ScrollViewer>
        </Border>

        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlock" Text="Ready. Open a PDF to begin."/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
